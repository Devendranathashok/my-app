node{
    stage("SCM Checkout"){
	git credentialsId: 'gitcreds', url: 'https://github.com/Devendranathashok/my-app.git'
	}
	 stage('Maven Build'){
        def mvnHome = tool name: 'maven3', type: 'maven'
		sh "${mvnHome}/bin/mvn clean package"
		sh 'mv target/myweb*.war target/myweb.war'
   }

	stage('Email'){
    mail bcc: '', body: '''Thanks,
	Java Home''', cc: '', from: 'reachashok9538053428a@gmail.com', replyTo: '', subject: 'Pipeline Demo', to: 'reachashok9538053428a@gmail.com'
    }
	
}
